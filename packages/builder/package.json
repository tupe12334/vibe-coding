{
  "name": "@vibe-builder/builder",
  "version": "0.1.1-6",
  "description": "Generate Vibe coding agent instructions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vibe-code/vibe-coding.git"
  },
  "scripts": {
    "build": "tsc",
    "lint": "tsc --noEmit",
    "prebuild": "rimraf dist",
    "build:w": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:update": "vitest run -u",
    "test:watch:update": "vitest watch -u",
    "release": "release-it"
  },
  "devDependencies": {
    "@types/mdast": "^4.0.4",
    "@types/node": "^24.0.1",
    "@vitest/ui": "3.2.3",
    "release-it": "^19.0.3",
    "typescript": "~5.1.6",
    "rimraf": "^6.0.1",
    "vitest": "^3.2.3"
  },
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "mdast-util-to-markdown": "^2.1.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}"
    },
    "npm": {
      "publish": true,
      "access": "public"
    },
    "github": {
      "release": true
    }
  }
}
